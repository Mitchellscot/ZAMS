@page "{applicantId:int?}"
@model ZAMS.EditApplicantModel
@{
    ViewData["Title"] = "Edit an Applicant";
}

<h1>Applicant Details <i>@Model.Applicant.Name</i></h1>

<form method="post">
    <input type="hidden" asp-for="Applicant.Id" />
    <div class="form-group">
        <label asp-for="Applicant.Name"><b>Name</b></label>
        <input asp-for="Applicant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.Email"><b>Email</b></label>
        <input asp-for="Applicant.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.PhoneNumber"><b>Phone Number</b></label>
        <input asp-for="Applicant.PhoneNumber" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.PhoneNumber"></span>
    </div>
    <div class="form-group">
        @if (Model.Applicant.AppDate == DateTime.Parse("01/01/0001"))
        {<label asp-for="Applicant.AppDate"><b>Application Date</b><i>Format: MM/DD/YYYY</i></label>
            <input asp-for="Applicant.AppDate" class="form-control" value="" type="text" />}
        else
        { <label asp-for="Applicant.AppDate"><b>Application Date</b></label>
            <input asp-for="Applicant.AppDate" class="form-control" value="@Model.Applicant.AppDate.ToShortDateString()" type="text" />}
        <span class="text-danger" asp-validation-for="Applicant.AppDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.Training"><b>Training Session</b></label>
        <select class="form-control" asp-for="Applicant.Training" asp-items="Model.TrainingDates"></select>
        <span class="text-danger" asp-validation-for="Applicant.Training"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.JobSource"><b>Where did they hear about the job?</b></label>
        <input asp-for="Applicant.JobSource" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.JobSource"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.Availability"><b>Schedule Availability</b></label>
        <input asp-for="Applicant.Availability" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.Availability"></span>
    </div>
    <div class="form-group">
        <label asp-for="Applicant.Notes"><b>Other Notes</b></label>
        <input asp-for="Applicant.Notes" class="form-control" />
        <span class="text-danger" asp-validation-for="Applicant.Notes"></span>
    </div>
    <div class="form-check">
        <input asp-for="Applicant.Hired" class="form-check-input" type="checkbox" />
        <label asp-for="Applicant.Hired"><b>Check here if they were offered the job.</b></label>
    </div>
    <div class="form-check">
        <input asp-for="Applicant.Returning" class="form-check-input" type="checkbox" />
        <label asp-for="Applicant.Returning"><b>Check here if they are retruning from another season.</b></label>
    </div>
    <hr />
    <div>
        <a style="float: left;" class="btn btn-outline-secondary" onclick="goBack()">Go Back</a>
        <button style="float: right;" type="submit" class="btn btn-primary">Save</button>
    </div>
    <br />
    <br />
</form>
<script>
    function goBack() {
        window.history.back();
    }
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}